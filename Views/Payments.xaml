<UserControl x:Class="NoorRAC.Views.Payments"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:svg="http://sharpvectors.codeplex.com/runtime/"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:local="clr-namespace:NoorRAC.Views"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <Grid Background="White">
        <DockPanel>
            <!-- Left Dock Panel -->
            <Border DockPanel.Dock="Left" Width="200" Background="#FFFFFF">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <!-- Space for Logo -->
                        <Image Source="{svgc:SvgImage Source=/Resources/Images/logo.svg}" Height="25" Margin="10, 28, 10, 10"/>

                        <!-- Subheading -->
                        <TextBlock Text="About Car Rental" FontSize="12" Foreground="#6E7687" Margin="10,5"/>

                        <!-- Button -->
                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MageDashboard2Fill.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Dashboard" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsCarRentalRounded.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Rentals" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsPerson4.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Customers" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/StreamlinePayment10Solid.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Payments" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarActiveButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/GameIconsTwoCoins.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Expenses" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>

                        <!-- Horizontal Rule -->
                        <Separator Background="#6E7687" Height="1" Margin="10,5"/>

                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsShowChart.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Finances" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/SolarWheelAngleBoldDuotone.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Cars" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>


                    </StackPanel>
                    <StackPanel Grid.Row="1" Margin="0,0,0,24">
                        <!-- Horizontal Rule -->
                        <Separator Background="#6E7687" Height="1" Margin="10,5"/>

                        <!-- Logout Button -->
                        <Button Style="{StaticResource SidebarButton}" Margin="10, 5" VerticalAlignment="Stretch" HorizontalContentAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="{svgc:SvgImage Source=/Resources/Svgs/SolarExitBoldDuotone.svg}" Width="24" Height="24" Margin="0,0,12,0" />
                                <TextBlock Text="Logout" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>

            </Border>

            <!-- Main Window Content -->
            <Border Background="#EAF4F4">
                <Grid Margin="0,12">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border CornerRadius="4" Grid.Row="0" Background="#FFFFFF" Margin="10,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Noor RAC" FontSize="18" FontWeight="Light" Foreground="Black" Margin="12"/>
                            <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsArrowForward.svg}" Width="12" Height="12" Margin="0,0,0,0" />
                            <TextBlock Text="Expenses" FontSize="18" FontWeight="Light" Foreground="Black" Margin="12"/>
                        </StackPanel>
                    </Border>
                    <Border CornerRadius="4" Grid.Row="2" Background="#FFFFFF" Padding="12" Margin="10,0,10,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Overview" FontSize="12" Grid.Column="0" VerticalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" Grid.Column="1" >
                                <Button Style="{StaticResource RadioOptionButton}" BorderBrush="Black" Background="White" Padding="12,6" Margin="0,0,4,0" Cursor="Hand">
                                    Today
                                </Button>
                                <Button Style="{StaticResource RadioOptionButton}" BorderBrush="Black" Background="White" Padding="12,6" Margin="0,0,4,0" Cursor="Hand">
                                    This Week
                                </Button>
                                <Button Style="{StaticResource RadioOptionActiveButton}" BorderBrush="Black" Background="White" Padding="12,6" Margin="0,0,4,0" Cursor="Hand">
                                    This Month
                                </Button>
                                <Button Style="{StaticResource RadioOptionButton}" BorderBrush="Black" Background="White" Padding="12,6" Cursor="Hand">
                                    This Year
                                </Button>
                            </StackPanel>

                            <Grid Grid.Row="1" Grid.ColumnSpan="2" Margin="0,12,0,0">

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="24" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Total Payments" Foreground="#C1D8C3" FontSize="18" FontWeight="Bold" />
                                        <TextBlock Text="Rs. 75,500" Foreground="Black" FontSize="32" FontWeight="Bold" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Total Advance" Foreground="#C1D8C3" FontSize="18" FontWeight="Bold" />
                                        <TextBlock Text="Rs. 25,000" Foreground="Black" FontSize="32" FontWeight="Bold" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="Total Due" Foreground="#C1D8C3" FontSize="18" FontWeight="Bold" />
                                        <TextBlock Text="Rs. 50,500" Foreground="Black" FontSize="32" FontWeight="Bold" />
                                    </StackPanel>
                                </Grid>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsArrowUpward.svg}" VerticalAlignment="Bottom" Margin="8" Width="32" Height="32" />
                                    <TextBlock VerticalAlignment="Bottom" Text="12%" FontSize="32" FontWeight="Bold" Foreground="LightGreen" />
                                    <TextBlock VerticalAlignment="Bottom" Text=" from last month" FontSize="12" FontWeight="Regular" Foreground="#6E7687" Margin="12,0,12,8"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>
                    <Border CornerRadius="4" Grid.Row="4" Background="#FFFFFF" Padding="12" Margin="10,0,10,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--  -->
                            <Grid Grid.Row="0" Margin="0,12,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Payments" VerticalAlignment="Center" FontSize="24" FontWeight="SemiBold" />
                                <StackPanel Grid.Column="1" Margin="0,0,24,0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,12,0">
                                        <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsCalendarMonthRounded.svg}" Width="32" Height="32" Margin="0,0,4,0"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                                        <TextBlock Text="From: " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <DatePicker Style="{StaticResource RoundedDatePicker}" SelectedDate="{Binding ToDate}" DisplayDate="{Binding ToDate}" Margin="0,0,4,0" FirstDayOfWeek="Monday"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                        <TextBlock Text="To: " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                        <DatePicker Style="{StaticResource RoundedDatePicker}" SelectedDate="{Binding ToDate}" DisplayDate="{Binding ToDate}" Margin="0,0,4,0" FirstDayOfWeek="Monday"/>
                                    </StackPanel>
                                </StackPanel>
                                <Button Grid.Column="2" Style="{StaticResource RoundedButton}" BorderBrush="Transparent" Background="#F6DC43" Foreground="Black" Padding="16,8,16,8" Margin="12,0,0,0" Cursor="Hand">
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsInkPenRounded.svg}" VerticalAlignment="Center" Width="18" Height="18" Margin="0,0,12,0"/>
                                        <TextBlock Text="Add New Payment" FontSize="14" Margin="0,4,0,0" FontWeight="Regular" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button>
                            </Grid>
                            <DataGrid Grid.Row="1" x:Name="ExpensesTable" ScrollViewer.VerticalScrollBarVisibility="Auto" ItemsSource="{Binding ExpensesRecords}" Style="{StaticResource CustomDataGrid}" IsReadOnly="True" Margin="0,10,0,0" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False" BorderBrush="#FF6E7687" BorderThickness="0,1,0,1">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="Auto" />
                                    <DataGridTextColumn Header="Customer Name" Binding="{Binding Date}" Width="*" />
                                    <DataGridTextColumn Header="Paid" Binding="{Binding Amount}" Width="Auto" />
                                    <DataGridTextColumn Header="Due Amount" Binding="{Binding Category}" Width="Auto" />
                                    <DataGridTextColumn Header="Payment Method" Binding="{Binding Description}" Width="Auto" />
                                    <DataGridTemplateColumn Header="Payment Status" Width="*">
                                        <DataGridTemplateColumn.HeaderStyle>
                                            <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                                <Setter Property="BorderThickness" Value="0,0,0,1" />
                                                <Setter Property="BorderBrush" Value="Black" />
                                            </Style>
                                        </DataGridTemplateColumn.HeaderStyle>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="Transparent" CornerRadius="8" BorderThickness="1" HorizontalAlignment="Center" Padding="12,6">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#EAF4F4"/>
                                                            <!-- Default Background -->
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding PaymentStatus}" Value="Pending">
                                                                    <Setter Property="Background" Value="#F6DC43"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Text="{Binding PaymentStatus}" FontWeight="SemiBold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="Black"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding PaymentStatus}" Value="Paid">
                                                                        <Setter Property="Foreground" Value="Green"/>
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding PaymentStatus}" Value="Pending">
                                                                        <Setter Property="Foreground" Value="Black"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Payment Date" Binding="{Binding PaymentMethod}" Width="*" />
                                    <DataGridTextColumn Header="Rental" Binding="{Binding Rental}" Width="*" />
                                    <DataGridTemplateColumn Header="Actions" Width="*">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button  Style="{StaticResource RoundedButton}" BorderBrush="Transparent" Background="#F6DC43" Foreground="Black" Padding="16,8,16,8" Margin="12,0,0,0" Cursor="Hand">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Image Source="{svgc:SvgImage Source=/Resources/Svgs/MaterialSymbolsInkPenRounded.svg}" VerticalAlignment="Center" Width="18" Height="18" Margin="0,0,12,0"/>
                                                        <TextBlock Text="Edit Payment" FontSize="14" Margin="0,4,0,0" FontWeight="Regular" VerticalAlignment="Center" />
                                                    </StackPanel>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>



                        </Grid>

                    </Border>
                </Grid>
            </Border>
        </DockPanel>
    </Grid>
</UserControl>
